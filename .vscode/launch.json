    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/src",
            "env": {
                "APP_ENV": "development",
                "APP_LOG_LEVEL": "DEBUG",
                "APP_DB_URL": "postgresql+psycopg://postgres:password@127.0.0.1:5432/app_db",
                "APP_REDIS_URL": "redis://127.0.0.1:6379"
            },
            "jinja": true
        }
    ]
}